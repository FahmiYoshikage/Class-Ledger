# Server Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Configuration
# For MongoDB Atlas, get your connection string from: https://cloud.mongodb.com
# Format: mongodb+srv://username:password@cluster.mongodb.net/database-name
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/kas-kelas?retryWrites=true&w=majority

# WhatsApp Configuration (Fonnte)
# Get your API token from: https://fonnte.com
FONNTE_API_TOKEN=YOUR_FONNTE_API_TOKEN
WA_TEST_MODE=false
AUTO_REMINDER_ENABLED=true

# Application Start Date (for week calculation)
# Format: YYYY-MM-DD
START_DATE=2025-10-27

# JWT Secret (generate a random string)
# You can use: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Origin (for production)
# Add your domain here
CORS_ORIGIN=https://kas-kelas.yourdomain.com
